<!-- GROUPS -->

<div class='d-flex justify-content-between'>
    <h1>Groups</h1>
    <button
        type='button'
        class='btn btn-primary'
        data-bs-toggle='modal'
        data-bs-target='#exampleModal'
    >
        Add Group
    </button>
</div>

<ul class='list-group mt-5 bg-dark text-white w-50 mx-auto'>
    {{#each groups}}
    <li href='#' class='list-group-item bg-dark text-white'>
        <div class='d-flex w-100 justify-content-between'>
            <span class='mb-1'>{{name}}</span>
            <small>
                <a href='/groups/delete?id={{id}}' class='btn btn-danger btn-sm'> Delete </a>
            </small>
        </div>
    </li>
    {{/each}}
</ul>

<!-- Modal -->
<div class='modal fade' id='exampleModal' tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true'>

    <div class='modal-dialog text-dark'>

        <div class='modal-content'>

            <div class='modal-header'>
                <h1 class='modal-title fs-5' id='exampleModalLabel'>Add Group</h1>
                <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                ></button>
            </div>

            <form action='/groups' method='post'>
                <div class='modal-body'>
                    <div class='mb-3'>
                        <label class='form-label'>Name</label>
                        <input name='name' type='text' class='form-control' />
                    </div>
                </div>
                <div class='modal-footer'>
                    <button
                        type='button'
                        class='btn btn-secondary'
                        data-bs-dismiss='modal'
                    >Close</button>
                    <button type='submit' class='btn btn-primary'>Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- GROUPS -->