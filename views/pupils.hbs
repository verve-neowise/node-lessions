<!-- PUPILS -->

<div class='d-flex justify-content-between'>
    <h1>Pupils</h1>
    <button
        type='button'
        class='btn btn-primary'
        data-bs-toggle='modal'
        data-bs-target='#exampleModal'
    >
        Add Pupil
    </button>
</div>
{{!-- pupils.hbs --}}
<ul class='list-group mt-5 bg-dark text-white'>
    {{#each pupils}}
        <li href='#' class='list-group-item bg-dark text-white'>
            <div class='d-flex w-100 justify-content-between'>
                <h5 class='mb-1'>{{name}} {{surname}}</h5>
                <small>
                    <a href='/pupils/delete?id={{id}}' class='btn btn-danger btn-sm'> Delete </a>
                </small>
            </div>
            <p class='mb-1'>{{phone}}</p>
            <small class='text-white-50'> {{group}} </small>
        </li>
    {{/each}}
</ul>

<!-- Modal -->
<div
    class='modal fade'
    id='exampleModal'
    tabindex='-1'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>

    <div class='modal-dialog text-dark'>

        <div class='modal-content'>

            <div class='modal-header'>
                <h1 class='modal-title fs-5' id='exampleModalLabel'>Add Pupil</h1>
                <button
                    type='button'
                    class='btn-close'
                    data-bs-dismiss='modal'
                    aria-label='Close'
                ></button>
            </div>

            <form action='/' method='post'>
                <div class='modal-body'>
                    <div class='mb-3'>
                        <label class='form-label'>Name</label>
                        <input name='name' type='text' class='form-control' />
                    </div>

                    <div class='mb-3'>
                        <label class='form-label'>Surname</label>
                        <input
                            name='surname'
                            type='text'
                            class='form-control'
                        />
                    </div>

                    <div class='mb-3'>
                        <label class='form-label'>Phone</label>
                        <input name='phone' type='phone' class='form-control' />
                    </div>

                    <div class='mb-3'>
                        <label class='form-label'>Group</label>
                        <select name='group' class='form-control'>
                            {{#each groups}}
                            <option value='{{id}}'>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class='modal-footer'>
                    <button
                        type='button'
                        class='btn btn-secondary'
                        data-bs-dismiss='modal'
                    >Close</button>
                    <button type='submit' class='btn btn-primary'>Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>